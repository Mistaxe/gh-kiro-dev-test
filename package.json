{
    "name": "behavioral-health-platform",
    "private": true,
    "version": "0.1.0",
    "workspaces": ["apps/*", "packages/*"],
    "scripts": {
      "dev": "concurrently -n api,web -c green,cyan \"npm run dev -w apps/api\" \"npm run dev -w apps/web\"",
      "build": "npm run build -w apps/api && npm run build -w apps/web",
      "test": "npm run test -ws",
      "lint": "npm run lint -ws",
      "format": "prettier --write ."
    },
    "devDependencies": {
      "concurrently": "^8.2.2",
      "typescript": "^5.4.5",
      "eslint": "^8.57.0",
      "prettier": "^3.2.5",
      "@typescript-eslint/parser": "^7.7.0",
      "@typescript-eslint/eslint-plugin": "^7.7.0",
      "eslint-config-prettier": "^9.1.0",
      "dotenv-cli": "^7.4.1"
    },
    "engines": {
      "node": ">=20.0.0"
    },
    "license": "UNLICENSED"
  }
  